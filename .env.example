# Application
APP_ENV=development
APP_DEBUG=true
APP_NAME="ADK Platform"
APP_VERSION=2.0.0

# Server
HOST=0.0.0.0
PORT=8080

# ADK Visual Builder (runs on port 8000 to avoid conflict with API)
ADK_VISUAL_BUILDER_PORT=8000
ADK_VISUAL_BUILDER_URL=http://localhost:8000/dev-ui

# Database
DATABASE_URL=postgresql+asyncpg://adk_user:adk_password@localhost:5432/adk_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Google ADK
GOOGLE_API_KEY=your-google-api-key-here

# CORS (frontend on 4000, API on 8080, ADK Visual Builder on 8000)
CORS_ORIGINS=http://localhost:4000,http://localhost:8080,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Multi-tenancy
DEFAULT_TENANT_SCHEMA_PREFIX=adk_tenant_

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_VISUAL_BUILDER=true
